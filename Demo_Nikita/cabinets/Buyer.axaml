<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Demo_Nikita.cabinets.Buyer"
        Title="покупатель"
        xmlns:vm="using:Demo_Nikita.Models">
  <ScrollViewer>
	  <StackPanel>
		  <TextBlock Text="Список заказов" HorizontalAlignment="Center"/>
		  <Border
          Background="red"
          Padding="2"
          Height="300">
              
			  <ListBox Name="ListUsersProd">
				  <ListBox.ItemTemplate>
					  <DataTemplate DataType="vm:UserProd">
						  <StackPanel Orientation="Horizontal">
							  <TextBlock Text="{Binding UserProductUser}"/>
                              <TextBlock Text=" "/>
                              <TextBlock Text="{Binding UserProductProduct}"/>
                              <TextBlock Text=" "/>
                              <TextBlock Text="{Binding UserProductPrice}"/>
                          </StackPanel>
                      </DataTemplate>
                  </ListBox.ItemTemplate>
              </ListBox>
          </Border>
      </StackPanel>
  </ScrollViewer>
</Window>
