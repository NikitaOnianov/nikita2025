<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Demo_Nikita.AddUser"
        Title="добавить пользователя"
        xmlns:vm="using:Demo_Nikita.Models">
  <ScrollViewer>
	  <StackPanel>
		  <TextBox Watermark="имя" Name="name"/>
          <TextBox Watermark="адрес" Name="adres"/>
          <TextBlock Text="Выберите тип пользователя"/>
          <ComboBox Name="ListType">
			  <ComboBox.ItemTemplate>
				  <DataTemplate DataType="vm:UserType">
					  <StackPanel Orientation="Horizontal">
						  <TextBlock Text="{Binding UserTypeName}"/>
                      </StackPanel>
                  </DataTemplate>
              </ComboBox.ItemTemplate>
          </ComboBox>
          <TextBox Watermark="Логин" Name="log"/>
          <TextBox Watermark="Пароль" Name="pas"/>
          <TextBox Watermark="ИНН" Name="inn"/>
          <TextBox Watermark="Телефон" Name="phone"/>
          <Button Content="Добавить" Click="add"/>
          <TextBlock Name="Mess"/>
      </StackPanel>
  </ScrollViewer>
</Window>
